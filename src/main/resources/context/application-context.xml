<?xml version="1.0" encoding="UTF-8"?>
<!--suppress SpringFacetInspection -->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd"
       default-lazy-init="true">
       <!--开启注解-->
       <context:annotation-config/>

       <!--加载配置文件-->
       <context:property-placeholder location="classpath:configuration.properties"/>
       <context:property-placeholder location="classpath:hbase.properties"/>

       <!-- 扫描注解包-->
       <context:component-scan base-package="com.kunteng.dao"/>
       <context:component-scan base-package="com.kunteng.service"/>


       <import resource="classpath*:/context/spring-database.xml"/>
       <import resource="classpath*:/context/spring-hbase.xml"/>
       <import resource="classpath*:/context/spring-memcache.xml"/>
       <import resource="classpath*:/context/spring-quartz.xml"/>
       <import resource="classpath*:/context/spring-redis.xml"/>



</beans>